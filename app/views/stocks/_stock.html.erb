<div id="<%= dom_id stock %>">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= stock.stock_name %></span>
          <ul>
            <li>Symbol: <%= stock.symbol %></li>
            <li>Purchase Value: USD <%= stock.value %></li>
            <li>Shares: <%= stock.count %></li>
            <li>Total Value at Purchase: USD <%= number_to_currency((stock.count * stock.value ), delimiter: '', unit: '')%></li>
          </ul>
        </div>
        <div class="card-action valign-wrapper" style="gap:1rem;">
         <%= button_to "Buy/Sell", edit_stock_path(stock.id), class:"waves-effect waves-light btn", method: :get %>
          <% if stock.count < 1 %>
            <%= button_to "Remove", stock_path(stock.id), class:"waves-effect waves-light btn red", method: :delete %>
          <%end%>
        
        </div>
      </div>
    </div>
</div>
